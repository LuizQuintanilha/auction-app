<h1>Nova Resposta</h1>

<div>
  <strong>Usuário:</strong> <%= @question.user.email %>
</div>

<div>
  <strong>Produto:</strong> <%= @question.product_batch.product.name %>
</div>

<div>
  <strong>Dúvida:</strong>
  <p><%= @question.content %></p>
</div>

<%= form_with model: @answer, url: question_answers_path(@question) do |form| %>
  <div>
    <%= form.label :content, "Resposta" %>
    <%= form.text_area :content %>
  </div>

  <%= form.submit "Enviar Resposta" %>
<% end %>

