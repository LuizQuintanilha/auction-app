<h1><%= @product.name %></h1>

<div>
  <strong>Código:</strong> <%= @product.code %>
</div>
<div>
  <strong>Categoria:</strong> <%= @product.category.name %>
</div>
<div>
  <strong>Descrição:</strong> <%= @product.description %>
</div>
<div>
  <strong>Dimensão: altura, largura, profundidade:</strong> <%= @product.height %>cm x <%= @product.width %>cm x <%= @product.depth %>cm
</div>
<div>
  <strong>Peso:</strong> <%= @product.weight %>g
</div>
<div>
  <strong>Imagem ilustrativa:</strong> <%= @product.photo %>
  <div>
  <strong>Status:</strong> <%= @product.status %>
</div>
</div>
<div>
  <%= link_to 'Editar', edit_product_path%>
</div>

<div>
  <%= link_to 'Voltar', products_path %>
</div>
