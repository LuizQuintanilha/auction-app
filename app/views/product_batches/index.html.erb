<div class="h1">
  <h2>Lotes Cadastrados</h2>
</div>
<% if @product_batches.any? %>
<div class="card-container">
  <% @product_batches.each do |batch| %>
  <div class="row">
    <% if batch.present_or_future? != 'Lote Expirado' %>
      <div class="card-batch">
        <div>
          <h3>Código do lote: <%= link_to batch.code, product_batch_path(batch.id) %></h3> 
          Início: <%= batch.start_date.strftime('%d/%m/%Y') %>-<%= batch.start_time.strftime('%H:%M') %>hr
          Término:<%= batch.deadline.strftime('%d/%m/%Y') %>-<%= batch.end_time.strftime('%H:%M') %>hr</br>
          Status: <%= batch.present_or_future? %>
        </div>
          <% if user_signed_in? %>
            <%= form_for(Favorite.new) do |f| %>
              <%= f.hidden_field :product_batch_id, value: batch.id %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <% if Favorite.exists?(product_batch_id: batch.id, user_id: current_user.id) %>
                <p>Favoritado</p>
              <% else %>
                <%= f.submit 'Favoritar'%>
              <% end %>
            <% end %>
          <% end %>
    <% end %>
      </div>
    </div>  
  <% end %>
<% else %>
  <h3>Não existem lotes em andamento</h3>
<% end %>
</div>


