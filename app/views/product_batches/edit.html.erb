<div class="h1">
  <h2>Editar Lote</h2>
</div>

<div class="error-message">
  <% if @product_batch.errors.any? %>
    <% @product_batch.errors.full_messages.each.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
<div>

<div class="form">
  <%= form_with(model: @product_batch) do |f| %>
    <div >
      <%= f.label :product_ids %>
      <%= f.collection_check_boxes(:product_ids, Product.all, :id, :name) do |products| %>
        <%= products.check_box(checked: @product_batch.product_ids.include?(products.value.to_i)) %>
        <%= products.label %>
      <% end %>
    <div class="input-text">
      <%= f.label :code %>
      <%= f.text_field :code %>
    </div>
    <div class="date">
      <%= f.label :start_date %>
      <%= f.datetime_local_field :start_date %>
    </div>
    <div class="date">
      <%= f.label :deadline %>
      <%= f.datetime_local_field :deadline %>
    </div>
    <div class="valor">
      <%= f.label :minimum_value %>
      <%= f.number_field :minimum_value, step: '0.01' %>
    </div>
    <div class="valor">
      <%= f.label :minimal_difference %>
      <%= f.number_field :minimal_difference, step: '0.01' %>
    </div>
    <div class="submit">
      <%= f.submit 'Salvar' %>
    </div>
  <% end %>
</div>