
<h2>Usu√°rios Bloqueados</h2>

<% @users.each do |user| %>
  <%= form_with(model: user, url: blocked_user_path(user), method: :patch) do |f| %>
    <strong>Email:</strong> <%= user.email %> - 
    <strong>CPF:</strong> <%= user.cpf %> - 
    <% if user.blocked? %>
      <%= f.submit 'Desbloquear' %>
    <% else %>
      <%= f.submit 'Bloquear' %>
    <% end %>
  <% end %>
<% end %>
